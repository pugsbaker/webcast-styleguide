<div class="thumbnail-card">
  <div class="card-image">
    <img src="{{ catalogue_item.ThumbnailUrl }}" alt="">
     <div class="card-image-overlay">
       <div class="thumbnail-card-tools">
       <button class="icon-button">
          <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#playlist-add"></use></svg>
          <span class="show-for-sr">add to playlist</span>
        </button>
        <button class="icon-button" data-toggle="slider">
          <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#info"></use></svg>
          <span class="show-for-sr">more info</span>
        </button>
        </div>
     </div>
    <div class="card-image-overlay--bottom">
      <div class="card-details">
        <h3 class="card-heading">{{ catalogue_item.Title }}</h3>
        <h4 class="card-subheading t-text-primary">{{ catalogue_item.Presenter }}</h4>
      </div>
    </div>
  </div>
</div>